def main():
    args = process_args()

    # Call the core functions for each subcommand

    if args[0] == "list":
        list(domain=args[1],
             username=args[2],
             server=args[3],
             verbose=args[4],
             cluster=args[5],
             datacenter=args[6],
             name=args[7],
             regex=args[8],
             template_only=args[9])

    if args[0] == "provision":
        provision(domain=args[1],
             username=args[2],
             server=args[3],
             verbose=args[4],
             source=args[5],
             name=args[6],
             num=args[7])


